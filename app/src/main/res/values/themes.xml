<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KedaiMbakTimApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_bar</item>
        <item name="colorPrimaryVariant">@color/white_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_input</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.KedaiMbakTimApp.Admin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_bar</item>
        <item name="colorPrimaryVariant">@color/white_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_input</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="Theme.KedaiMbakTimApp.Activity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green_bar</item>
        <item name="colorPrimaryVariant">@color/green_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_input</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    //for edittext
    <style name="EditText_General">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    //for button
    <style name="Button_General">
        <item name="android:background">@drawable/background_button1</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    //for progressbar
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/green_button</item>
    </style>

    //for navigation admin
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //for spinner
    <style name="SpinnerTheme">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/gray_back</item>
    </style>
</resources>