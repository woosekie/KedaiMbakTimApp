<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/logo2" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/gray_back"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:justificationMode="inter_word"
                    android:text="Kedai Mbak Tim merupakan salah satu nama usaha yang bergerak dibidang katering. Usaha ini didirikan pada tahun 2019 dan berlokasi di Kecamatan Sukorejo, Kabupaten Pasuruan, Jawa Timur. Kedai Mbak Tim menerima berbagai macam pesanan seperti akikah, rapat, selamatan, ulang tahun, kantin dan lain-lain. Katering Kedai Mbak Tim termasuk dalam kategori Usaha Kecil Mikro (UKM)"
                    android:textColor="@color/gray_title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/gray_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Connect With Us"
                    android:textColor="@color/gray_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="  Follow Our Instagram"
                    android:textColor="@color/gray_title"
                    app:drawableStartCompat="@drawable/ic_baseline_ig" />

                <TextView
                    android:id="@+id/button_tiktok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="  Follow Our TikTok"
                    android:textColor="@color/gray_title"
                    app:drawableStartCompat="@drawable/ic_baseline_tiktok" />

                <TextView
                    android:id="@+id/button_wa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="  Contact Us"
                    android:textColor="@color/gray_title"
                    app:drawableStartCompat="@drawable/ic_baseline_wa" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>


