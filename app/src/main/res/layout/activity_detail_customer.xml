<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back"
    tools:context=".DetailCustomerActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextView_General"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Profil Detail"
                android:textColor="@color/gray_title"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_profile_user_svgrepo_com__1_" />

                <TextView
                    style="@style/TextView_General"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="Nama" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/wrapper_edit_text"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_baseline_person_24" />

                    <TextView
                        android:id="@+id/customerName"
                        style="@style/EditText_General"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:text="Rizky Nuansa" />

                </LinearLayout>

                <TextView
                    style="@style/TextView_General"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="Email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/wrapper_edit_text"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_baseline_email" />

                    <TextView
                        android:id="@+id/customerEmail"
                        style="@style/EditText_General"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:text="rizkynuansa2@gmail.com" />

                </LinearLayout>

                <TextView
                    style="@style/TextView_General"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="Nomor Telepon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/wrapper_edit_text"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_baseline_phone_24" />

                    <TextView
                        android:id="@+id/customerNumber"
                        style="@style/EditText_General"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:text="0821873283223" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/button_wa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_baseline_wa"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:contentDescription="@string/desc"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_wa" />
                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    style="@style/TextView_General"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="2dp"
                    android:text="Alamat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/wrapper_edit_text"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_map_pin" />

                    <TextView
                        android:id="@+id/customerLoc"
                        style="@style/EditText_General"
                        android:layout_marginEnd="8dp"
                        android:gravity="center_vertical"
                        android:text="Lokasi" />

                </LinearLayout>

                <TextView
                    style="@style/TextView_General"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/orange"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="26dp"
                    android:text="*klik untuk lihat lokasi pada maps" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>